{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      // use options.cwd property if the Makefile is not in the project root ${workspaceRoot} dir
      "options": {
        "cwd": "${workspaceRoot}"
      },
      // start the build without prompting for task selection, use "group": "build" otherwise
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      // arg passing example: in this case is executed make QUIET=0
      "args": [
        "QUIET=0"
      ],
      // Use the standard less compilation problem matcher.
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "absolute"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Mount module",
      "type": "shell",
      "command": "sudo insmod fiber.ko", // use options.cwd property if the Makefile is not in the project root ${workspaceRoot} dir
      "options": {
        "cwd": "${workspaceRoot}"
      }, // start the build without prompting for task selection, use "group": "build" otherwise
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Unmount module",
      "type": "shell",
      "command": "sudo rmmod fiber",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Clean dmesg",
      "type": "shell",
      "command": "sudo dmesg -C",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}